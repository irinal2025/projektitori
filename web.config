<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.webServer>
        <httpErrors errorMode="Custom" existingResponse="Replace">
            <!-- 404 Not Found -->
            <remove statusCode="404" />
            <error statusCode="404" path="/404.php" responseMode="File" />
            
            <!-- 500 Internal Server Error -->
            <remove statusCode="500" />
            <error statusCode="500" path="/500.html" responseMode="File" />
            
            <!-- 403 Forbidden -->
            <remove statusCode="403" />
            <error statusCode="403" path="/403.html" responseMode="File" />
            
            <!-- 400 Bad Request -->
            <remove statusCode="400" />
            <error statusCode="400" path="/400.html" responseMode="File" />
            
            <!-- 401 Unauthorized -->
            <remove statusCode="401" />
            <error statusCode="401" path="/401.html" responseMode="File" />
        </httpErrors>
    </system.webServer>
</configuration>
